<Window x:Class="Apposcope_beta.ScreenshotShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScreenshotShowWindow"
        MouseDown="OnMouseDown"
        MouseMove="OnMouseMove"
        MouseUp="OnMouseUp"
        MouseWheel="OnMouseWheel"
        KeyDown="OnKeyDown"
        Focusable="True">
    <Grid>
        <!-- Definiere zwei Zeilen: Eine für das Bild, eine für den Button -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Platz für das Bild -->
            <RowDefinition Height="Auto" />
            <!-- Platz für den Button -->
        </Grid.RowDefinitions>

        <!-- Canvas für den Screenshot, mit expliziter Größe -->
        <Canvas x:Name="ScreenshotCanvas"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Image x:Name="ScreenshotImage"
                   Stretch="None" />
        </Canvas>

        <!-- Buttons in der unteren Zeile -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="5">
            <Button Content="Zurück zum Hauptfenster"
                    Width="180"
                    Height="40"
                    Margin="5"
                    Click="BackToMainWindow_Click" />
            <Button Content="Neuen Rahmen ziehen"
                    Width="150"
                    Height="40"
                    Margin="5"
                    Click="DrawNewFrame_Click" />
        </StackPanel>
    </Grid>
</Window>
